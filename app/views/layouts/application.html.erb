<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="alternate" type="application/rss+xml" title="Blogger RSS Feed" href="http://localhost:3000/articles/feed?format=rss">
</head>
<body>
	<p class="flash"> <%= flash.notice %> </p>
	<%= render "layouts/sideNav" %>
	<div id="container">
		<div id="content">
			<%= yield %>
			<hr>
			<h6>
				<% if logged_in? %>
					<%= "Logged in as #{current_user.email}" %>
					<%= link_to "(logout)", logout_path %>
				<% else %>
					Logged Out
					<%= link_to "(login)", login_path %>
				<% end %>
			</h6>	
		</div>
	</div>
</body>
</html>
